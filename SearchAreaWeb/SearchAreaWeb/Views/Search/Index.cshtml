@model SearchAreaWeb.Search.Models.SearchModel

@{
    ViewBag.Title = "Search Home";
}

<div class="jumbotron">
    <h3>Search</h3>
</div>

<div class="row">
    <form action="Search/Create" method="post">
        <div class="form-group">
            <label for="searchName">Search name</label>
            <input name="Name" type="text" class="form-control" id="searchName" placeholder="Search name">
        </div>
        <div class="form-group">
            <label for="areaType">Area Type</label>
            <select name="AreaType" class="form-control" id="areaType">
                <option>Field</option>
                <option>Forest</option>
                <option>DenseForest</option>
                <option>Mountains</option>
            </select>
        </div>
        <div class="form-group">
            <label for="northeastGeopoint">Northeast Point</label>
            <input name="NortheastGeopoint" type="text" class="form-control" id="northeastGeopoint" placeholder="Lat/Long">
        </div>
        <div class="form-group">
            <label for="southwestGeopoint">Northeast Point</label>
            <input name="SouthwestGeopoint" type="text" class="form-control" id="southwestGeopoint" placeholder="Lat/Long">
        </div>
        <button type="submit" class="btn btn-default">Create</button>
    </form>   
</div>